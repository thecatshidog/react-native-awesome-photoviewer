<resources>

    <!-- Base application theme. -->
     <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
     </style>

    <style name="SimpleButtonStyle" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/accentText</item>
    </style>

    <style name="SimpleImageButtonStyle" parent="AppTheme">
        <item name="android:background">@null</item>
        <item name="android:width">10px</item>
        <item name="android:height">10px</item>
    </style>

    <style name="DescriptionText" parent="AppTheme">
        <item name="android:textColor">@color/accentText</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">10sp</item>

    </style>

    <style name="TitleText" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/accentText</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.Black" parent="AppTheme">
        <item name="android:windowOverscan">false</item>
        <item name="android:statusBarColor">#00000000</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
